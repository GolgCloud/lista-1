using System;

class Program
{
    static void Main()
    {
        // Solicita ao usuário para digitar um número real
        Console.Write("Digite um número real: ");
        
        // Lê a entrada do usuário e converte para um número do tipo double
        double numeroReal = Convert.ToDouble(Console.ReadLine());
        
        // Exibe o valor da variável na tela
        Console.WriteLine("Você digitou o número real: " + numeroReal);
    }
}
